<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3.96"
        android:gravity="top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/getbin"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/label_Get_500DPI"
                android:textSize="15sp" />

            
            <Button
                android:id="@+id/exit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:text="@string/label_Exit"
                android:textSize="15sp" />
        </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >
            <Button
                android:id="@+id/getInfo"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/label_Get_Info"
                android:textSize="15sp"
                 />

            <Button
                android:id="@+id/setInfo"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/label_Set_Info"
                android:textSize="15sp"
                 />            
			<Button
                android:id="@+id/saveFlash"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/label_Save"
                android:textSize="15sp"
                 />
			<Button
                android:id="@+id/resetInfo"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/label_Reset"
                android:textSize="15sp"
                 />
		</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                android:id="@+id/textview_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_weight="0.43"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <ImageView
            android:id="@+id/image_Fingersmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/label_ContentDescription"
            android:scaleType="fitStart" />

    </LinearLayout>

</LinearLayout>